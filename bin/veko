#!/usr/bin/env node
const fs = require('fs');
const path = require('path');
const { runVeko } = require('../lib/veko');

const file = process.argv[2];
if (!file) {
  console.error('Usage: veko <file.vk>');
  process.exit(1);
}

const code = fs.readFileSync(path.resolve(file), 'utf-8');
runVeko(code, require('readline-sync').question);